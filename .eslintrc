{
  "rules": {
    "indent": [2, 2],
    "quotes": [2, "single", { "avoidEscape": true }],
    "semi": [2, "always"],
    "comma-dangle": [2, "only-multiline"],
    "no-console": 0,
    "no-unused-vars": [2, { "vars": "all", "args": "none" }],
    "no-multiple-empty-lines": [2, { "max": 1 }],
    "prefer-const": [
      "error",
      {
        "destructuring": "any",
        "ignoreReadBeforeAssign": false
      }
    ]
  },
  "env": {
    "es6": true,
    "browser": false,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "globals": {
    "require": true,
    "module": true
  }
}
